{
  "name": "@secondlife/functions",
  "private": true,
  "version": "0.1.0",
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "pnpm run prepare:shared && tsc -p tsconfig.json",
    "dev": "pnpm --filter @secondlife/shared build && pnpm run prepare:shared && firebase emulators:start --only functions,firestore,storage,auth --config ../../firebase.json --project secondlife-exchange-dev",
    "deploy": "firebase deploy --only functions",
    "lint": "eslint src --ext .ts",
    "prepare:shared": "node ./scripts/prepare-shared-dep.mjs",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "seed:dev": "tsx scripts/seed-dev.ts"
  },
  "dependencies": {
    "@secondlife/shared": "file:vendor/shared",
    "firebase-admin": "^13.0.2",
    "firebase-functions": "^6.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8"
  }
}
